<div class="container">

  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Nueva montaña rusa</h1>
    </div>

    <div class="col-md-6">
      <form action="/coasters/crear" method="post">
        <div class="form-group">
          <label for="name">Nombre</label>
          <input name="name" type="text" class="form-control" id="name" placeholder="Nombre de la montaña rusa">
        </div>
        <div class="form-group">
          <label for="description">Descripción</label>
          <input name="description" type="text" class="form-control" id="description"
            placeholder="Descripción de la montaña rusa">
        </div>
        <div class="form-group">
          <label for="inversions">Inversiones</label>
          <input name="inversions" type="number" class="form-control" id="inversions"
            placeholder="Inversiones de la montaña rusa">
        </div>
        <div class="form-group">
          <label for="length">Longitud</label>
          <input name="length" type="number" class="form-control" id="length" placeholder="Nombre de la montaña rusa">
        </div>
        <div class="form-group">
          <label for="park-list">Parque en el que se encuentra:</label>
          <select name="" class="form-control" id="park-list">
            <option>Seleccionar</option>
            {{#each allParks}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
            {{!-- <option value="">Parque</option>
            <option value="">Parque</option>
            <option value="">Parque</option>
            <option value="">Parque</option> --}}
          </select>
        </div>

        <button type="submit" class="btn btn-dark">Crear montaña rusa</button>
        <a href="/coasters/listaCoaster" class="btn btn-dark">Volver</a>

      </form>
    </div>

  </div>
</div>