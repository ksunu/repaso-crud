<div class="container">

  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Nuevo parque temático</h1>
    </div>

    <div class="col-md-6">

      <form action="/parks/crear" method="post">
        <div class="form-group">
          <label for="name">Nombre</label>
          <input name="name" type="text" class="form-control" id="name" value="{{name}}">
        </div>
        <div class="form-group">
          <label for="description">Descripción</label>
          <input name="description" type="text" class="form-control" id="description" value="{{description}}">
        </div>

        <button type="submit" class="btn btn-dark">Crear parque</button>
      </form>
    </div>

  </div>
</div>